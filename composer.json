{
    "name": "radebatz/openapi-router",
    "description": "Routing adapter for OpenApi annotations.",
    "license": [
        "MIT"
    ],
    "homepage": "http://radebatz.net/mano/",
    "authors": [
        {
            "name": "Martin Rademacher",
            "email": "mano@radebatz.org"
        }
    ],
    "prefer-stable": true,
    "scripts": {
        "fix-cs": [
            "vendor/bin/php-cs-fixer fix src",
            "vendor/bin/php-cs-fixer fix tests"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Radebatz\\OpenApi\\Routing\\": "src"
        },
        "files": [
            "src/autoloader.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Radebatz\\OpenApi\\Routing\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "require": {
        "php": ">=7.1",
        "psr/simple-cache": "^1.0",
        "zircote/swagger-php": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14.1",
        "laravel/laravel": "^5.7",
        "laravel/lumen": "^5.7",
        "phpunit/phpunit": "^7.0",
        "silex/silex": "^2.3",
        "slim/slim": "^3.12",
        "symfony/cache": "^4.2"
    },
    "suggest": {
        "radebatz/openapi-verifier": "Allows your PHPUnit tests to validate your controller response against the OpenAPI annotations."
    }
}
